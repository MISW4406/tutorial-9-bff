{
  "name": "tutorial-9-bff",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.10.7",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2.12.2": {
      "version": "28.3.2"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10.7"
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "initializeCommand": "mkdir -p data/bookkeeper data/zookeeper data/mysql && sudo chmod -R 777 ./data && sudo chmod -R 777 ./connectors",
  "runArgs": ["--init", "--privileged"],
  "forwardPorts": [2181, 8080, 6650],
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ritwickdey.liveserver",
        "cweijan.vscode-mysql-client2"
      ]
    }
  }
}